# Application Configuration
APP_ENV=local
DEBUG=true
LOG_LEVEL=INFO

# API Security
API_KEY=dev-CHANGE-ME-TO-SECURE-KEY
JWT_AUDIENCE=pdm-app
JWT_ISSUER=https://login.microsoftonline.com/common/v2.0

# Azure Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=pdm-rg
AZURE_LOCATION=eastus

# Database Configuration
DATABASE_URL=postgresql+psycopg2://pdm_user:secure_password@localhost:5432/pdm_db
# For Azure Database for PostgreSQL:
# DATABASE_URL=postgresql+psycopg2://pdm_user:secure_password@pdm-server.postgres.database.azure.com:5432/pdm_db?sslmode=require

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
# For Azure Cache for Redis:
# REDIS_URL=rediss://pdm-cache.redis.cache.windows.net:6380/0

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://pdm-search.search.windows.net
AZURE_SEARCH_KEY=your-search-key
AZURE_SEARCH_INDEX_NAME=pdm-manuals

# Azure Key Vault Configuration
AZURE_KEY_VAULT_URL=https://pdm-keyvault.vault.azure.net/
AZURE_KEY_VAULT_TENANT_ID=your-tenant-id
AZURE_KEY_VAULT_CLIENT_ID=your-client-id
AZURE_KEY_VAULT_CLIENT_SECRET=your-client-secret

# Azure Container Registry
AZURE_CONTAINER_REGISTRY=pdmregistry.azurecr.io
AZURE_CONTAINER_REGISTRY_USERNAME=pdmregistry
AZURE_CONTAINER_REGISTRY_PASSWORD=your-acr-password

# Machine Learning Configuration
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_BACKEND=azure-search  # or faiss for local development
MODEL_RETRAIN_SCHEDULE=0 3 * * *  # Daily at 3 AM

# OpenAI Configuration (optional for enhanced chat)
OPENAI_API_KEY=your-openai-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_VERSION=2023-12-01-preview

# Monitoring Configuration
PROMETHEUS_PORT=9000
OTEL_EXPORTER_OTLP_ENDPOINT=https://pdm-monitor.eastus.monitor.azure.com
OTEL_SERVICE_NAME=pdm-api

# File Upload Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=csv,txt
UPLOAD_TEMP_DIR=./temp_uploads

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour

# Feature Engineering
LAG_WINDOWS=1,2,3,6,12,24
ROLLING_WINDOWS=3,6,12,24
PREDICTION_HORIZON_HOURS=24,48,72

# Alert Thresholds
FAILURE_PROB_THRESHOLD=0.75
ANOMALY_SCORE_THRESHOLD=0.9
HIGH_SEVERITY_THRESHOLD=0.9
MEDIUM_SEVERITY_THRESHOLD=0.7
LOW_SEVERITY_THRESHOLD=0.5



